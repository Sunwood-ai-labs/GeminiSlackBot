modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Slack Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Documentation Check"

[[workflows.workflow]]
name = "Slack Bot"
author = "agent"

